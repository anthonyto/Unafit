<h1>Listing users</h1>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
			<% if current_user.manager? %>
				<th>Sessions Left</th>
			<% end %>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
				<% if current_user.manager? %>
					<td><%= user.subscriptions.where(gym_id: @gym.id).first.sessions_left %></td>
				<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render 'layouts/back_btn' %>