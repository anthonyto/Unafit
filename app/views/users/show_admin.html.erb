<div class="container-fluid">

	<h2>All Unafit Gyms</h2>
	<table class="table">
		<tr>
			<th>Gym Name</th>
			<th>Street</th>
			<th>State</th>
			<th>Description</th>
			<th>Manager</th>
		</tr>
		<% @gyms.each do |gym| %>
		<tr>
			<td><%= link_to gym.name, gym_path(gym.id), :class => 'navbar-link' %></td>
			<td><%= gym.street %></td>
			<td><%= gym.state %></td>
			<td><%= gym.description %></td>
			<td>
				<% if gym.manager_id.nil? %>
					No manager! <%= link_to "Add one", new_manager_gym_path(gym.id) %>
				<% else %>
					<%= gym.manager_id %>
				<% end %>
			</td>
		</tr>
	<% end %>
	</table>
	
	<%= link_to 'Edit User', edit_user_path(@user) %> |
	<%= link_to 'Create a new gym', new_gym_path %>
</div>
