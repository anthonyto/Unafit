<div class="container-fluid">
	<div class="col-md-4"></div>
	
	<div class="col-md-4">

		<h2><%= t 'devise.invitations.edit.header' %></h2>

		<%= form_for resource, :as => resource_name, :url => user_invitation_path, :html => { :method => :put } do |f| %>
		  <%= devise_error_messages! %>
		  <%= f.hidden_field :invitation_token %>


		  <div class="form-group">
			 	<%= f.label :first_name, class: 'sr-only' %>
			  <%= f.text_field :first_name, class: "form-control jv-float", placeholder: "First Name", required: true %>
			</div>
			
		  <div class="form-group">
			  <%= f.label :last_name, class: 'sr-only' %>
			  <%= f.text_field :last_name, class: "form-control jv-float", placeholder: "Last Name", required: true %>
			</div>
			
		  <div class="form-group">
			  <%= f.label :password, class: 'sr-only' %>
			  <%= f.password_field :password, class: "form-control jv-float", placeholder: "Password", required: true %>
			</div>
			
		  <div class="form-group">
			 	<%= f.label :password_confirmation, class: 'sr-only' %>
			  <%= f.password_field :password_confirmation, class: "form-control jv-float", placeholder: "Password Confirmation", required: true %>
			</div>
			
		  <div class="form-group">
			  <%= f.submit t("devise.invitations.edit.submit_button"), class: "btn", id: "form-submit-btn" %>
			</div>
		<% end %>

	</div>
	
	<div class="col-md-4"></div>
</div>

<script>
	$(".jv-float").jvFloat();
</script>
