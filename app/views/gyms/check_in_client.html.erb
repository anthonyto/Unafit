<div class="container-fluid">
	<div class="row">
		<h1>Users registered at <%= @gym.name%></h1>

		<table class="table">
		  <thead>
		    <tr>
		      <th>First name</th>
		      <th>Last name</th>
		      <th>Email</th>
					<th>Sessions Left</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @users.each do |user| %>
		      <tr>
		        <td><%= user.first_name %></td>
		        <td><%= user.last_name %></td>
		        <td><%= user.email %></td>
						<td><%= user.subscriptions.where(gym_id: @gym.id).first.sessions_left %></td>
						<td><%= link_to "Check In", update_sessions_left_gym_path(@gym.id, :user_id => user.id), :class => "btn btn-primary btn-sm"%>
		      </tr>
		    <% end %>
		  </tbody>
		</table>

		<br>

		<%= link_to 'Back', :back, :class => "btn btn-primary btn-sm"%>
	</div>
</div>