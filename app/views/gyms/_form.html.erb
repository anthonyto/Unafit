<%= form_for(@gym) do |f| %>
  <% if @gym.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gym.errors.count, "error") %> prohibited this gym from being saved:</h2>

      <ul>
      <% @gym.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<h3>Gym</h3>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :street %><br>
    <%= f.text_field :street %>
  </div>
  <div class="field">
    <%= f.label :two_gym_passes %><br>
    <%= f.number_field :two_gym_passes %>
  </div>
  <div class="field">
    <%= f.label :three_gym_passes %><br>
    <%= f.number_field :three_gym_passes %>
  </div>
  <div class="field">
    <%= f.label :four_gym_passes %><br>
    <%= f.number_field :four_gym_passes %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.text_field :status %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :link %><br>
    <%= f.text_field :link %>
  </div>
  <div class="field">
    <%= f.label :showers %><br>
    <%= f.check_box :showers %>
  </div>
  <div class="field">
    <%= f.label :classes %><br>
    <%= f.text_area :classes %>
  </div>
  <div class="field">
    <%= f.label :reservation_policy %><br>
    <%= f.text_area :reservation_policy %>
  </div>
  
  <h3>Gym Manager</h3>
  <!-- Fields for user that will own this gym -->
  <%= fields_for (@gym, @user) do |u| %>
	  <div class="field">
	    <%= u.label :first_name %><br>
	    <%= u.text_field :first_name %>
	  </div>  <div class="field">
	     <%= u.label :last_name %><br>
	     <%= u.text_field :last_name %>
	   </div>
	   <div class="field">
	     <%= u.label :email %><br>
	     <%= u.text_field :email %>
	   </div>
  <% end %>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
