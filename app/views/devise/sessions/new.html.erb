<div class="container-fluid">

	<div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4">

			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

			  <div class="form-group">
			    <%= f.label :email, class: 'sr-only' %>
			    <%= f.email_field :email, autofocus: true, class: 'form-control jv-float', placeholder: "Email" %>
			  </div>

			  <div class="form-group">
			    <%= f.label :password, class: 'sr-only' %>
			    <%= f.password_field :password, autocomplete: "off", class: 'form-control jv-float', placeholder: "Password" %>
			  </div>

			  <% if devise_mapping.rememberable? -%>
		      <%= f.check_box :remember_me %>
		      <%= f.label :remember_me %>
				<% end -%>
				
		    <%= f.submit "Log In", class: "btn", id: "form-submit-btn" %>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
		<div class="col-md-4"></div>
	</div>

</div>

<script>
	$(".jv-float").jvFloat();
</script>