<div class="container-fluid">

	<div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4">

			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="form-group">
			    <%= f.label :first_name, class: 'sr-only' %>
			    <%= f.text_field :first_name, class: "form-control jv-float", placeholder: "First Name", autofocus: true %>
			  </div>
	
			  <div class="form-group">
			    <%= f.label :last_name, class: 'sr-only' %>
			    <%= f.text_field :last_name, class: "form-control jv-float", placeholder: "Last Name" %>
			  </div>

			  <div class="form-group">
			    <%= f.label :email, class: 'sr-only'  %>
			    <%= f.email_field :email, class: "form-control jv-float", placeholder: "Email" %>
			  </div>

			  <div class="form-group">
			    <%= f.label :password, class: 'sr-only'  %>
			    <% if @validatable %>
			    <% end %>
			    <%= f.password_field :password, class: "form-control jv-float", placeholder: "Password", autocomplete: "off" %>
			  </div>

			  <div class="form-group">
			    <%= f.label :password_confirmation, class: 'sr-only'  %>
			    <%= f.password_field :password_confirmation, class: "form-control jv-float", placeholder: "Confirm Password", autocomplete: "off" %>
			  </div>

			  <div class="actions text-center">
			    <%= f.submit "Sign Up", class: "btn", id: "form-submit-btn" %>
			  </div>
			<% end %>
			
			<%= render "devise/shared/links" %>
		</div>
		<div class="col-md-4"></div>
	</div>

</div>

<script>
	$(".jv-float").jvFloat();
</script>
